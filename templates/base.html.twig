        {% block stylesheets %}

        {% endblock %}

        {% block javascripts %}

        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('main') }}">Homepage</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('main') }}">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('car_index') }}">Cars</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('engine_index') }}">Engines</a>
                    </li>

                </ul>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="navbar-text btn btn-danger" href="{{ path('app_logout') }}">
                        Logout
                    </a>
                {% else %}
                    <a class="navbar-text btn btn-success" href="{{ path('app_login') }}">
                        Login
                    </a>
                {% endif %}
            </div>
        </div>
    </nav>

    <section class="container">
        {% block body %}{% endblock %}
    </section>

