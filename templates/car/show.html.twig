{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Image</th>
            <td>
                <img style="width: 300px!important;" src="
                    {{ asset('uploads/photos/') }}{{ car.photoName ? car.photoName : 'no-image-found.png' }}"
                    class="card-img-top" alt="No image found...">
            </td>
        </tr>
        <tr>
            <th>Make</th>
            <td>{{ car.make }}</td>
        </tr>
        <tr>
            <th>Body Type</th>
            <td>{{ car.bodyType|capitalize }}</td>
        </tr>
        <tr>
            <th>Color</th>
            <td>{{ car.color }}</td>
        </tr>
        <tr>
            <th>Year</th>
            <td>{{ car.year ? car.year|date('Y') : '' }}</td>
        </tr>
        <tr>
            <th>Mileage</th>
            <td>{{ car.mileage|number_format(0, '.', ' ') }} km</td>
        </tr>
        <tr>
            <th>Fuel Type</th>
            <td>{{ car.fuelType }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ car.status }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ car.price/100|number_format(2, '.', ' ') }} PLN</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>{{ car.country }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ car.description }}</td>
        </tr>
        <tr>
            <th>Engine</th>
            <td>{{ car.engine.name }} - {{ car.engine.horsepower }}HP</td>
        </tr>
        </tbody>
    </table>


    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('car_edit', {'id': car.id}) }}" class="btn btn-warning">Edit</a>

        {{ include('car/_delete_form.html.twig') }}
    {% endif %}
    <a href="{{ path('car_index') }}" class="btn btn-outline-secondary">Back to list</a>


{% endblock %}
